# API Gateway Configuration
API_GATEWAY_PORT=4000
API_GATEWAY_HOST=localhost

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=cloud_secure

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/cloud_secure
MONGO_USER=mongodb
MONGO_PASSWORD=your_password

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h

# Service Ports
AUTH_SERVICE_PORT=4001
USER_SERVICE_PORT=4002
DATA_SERVICE_PORT=4003
NOTIFICATION_SERVICE_PORT=4004

# Service URLs
AUTH_SERVICE_URL=http://localhost:4001
USER_SERVICE_URL=http://localhost:4002
DATA_SERVICE_URL=http://localhost:4003
NOTIFICATION_SERVICE_URL=http://localhost:4004

# Environment
NODE_ENV=development

# LLM / Claude configuration
# Set to true to enable LLM features across all services
LLM_ENABLED=true
# Default provider name (e.g. "claude")
LLM_DEFAULT_PROVIDER=claude
# Claude specific settings
CLAUDE_API_KEY=your_claude_api_key
CLAUDE_API_URL=https://api.anthropic.com/v1/complete
# Model to use for Claude (e.g. claude-sonnet-3.5)
CLAUDE_MODEL=claude-sonnet-3.5